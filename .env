# API Keys
GOOGLE_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Environment
NODE_ENV=development

# FREE TIER MODE (set to true for 512MB RAM hosting)
FREE_TIER_MODE=true

# Backend Limits
MAX_VIDEO_SIZE_MB=10
MAX_VIDEO_DURATION_SEC=15
MAX_FRAMES=10
FRAME_FPS=1

# Frontend Limits (must match backend)
NEXT_PUBLIC_MAX_VIDEO_SIZE_MB=10
NEXT_PUBLIC_MAX_FRAMES=10

# For paid tier, use these settings:
# FREE_TIER_MODE=false
# MAX_VIDEO_SIZE_MB=50
# MAX_FRAMES=20
# FRAME_FPS=2
# NEXT_PUBLIC_MAX_VIDEO_SIZE_MB=50
# NEXT_PUBLIC_MAX_FRAMES=20
